class Solution {
    public long countInterestingSubarrays(List<Integer> nums, int mod, int k) {
        Map<Integer, Long> map = new HashMap<>();
        map.put(0, 1L);
        long res = 0;
        int count = 0;
        for (int x : nums) {
            if (x % mod == k) count++;
            int curr = count % mod;
            int need = (curr - k + mod) % mod;
            res += map.getOrDefault(need, 0L);
            map.put(curr, map.getOrDefault(curr, 0L) + 1);
        }
        return res;
    }
}
