class Solution {
    public int maxBottlesDrunk(int numBottles, int numExchange) {
        int full = numBottles, empty = 0, total = 0;
        while (full > 0) {
            total += full;
            empty += full;
            full = 0;
            while (empty >= numExchange) {
                empty -= numExchange;
                numExchange++;
                full++;
            }
        }
        return total;
    }
}
